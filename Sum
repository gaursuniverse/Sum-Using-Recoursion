import java.util.*;
public class SumRecoursion {
    static int sum(int n){
        if( n == 0 ){
            return 0;
        }
        else{
            return n + sum(n-1);
        }
    }
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Input:");
        int no = sc.nextInt();
        int res = sum(no);
        System.out.print("Output:");
        System.out.print(res);
    }
}
